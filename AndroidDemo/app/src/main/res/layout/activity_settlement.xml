<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettlementActivity"
    android:background="@mipmap/beijing2">

    <View
        android:id="@+id/view"
        android:layout_width="318dp"
        android:layout_height="304dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="52dp"
        android:background="@mipmap/fangkuai3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVoice3"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="42dp"
        android:background="@mipmap/yinyue"
        android:onClick="changeMusicState"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="109dp"
        android:background="@drawable/bc_view2"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <View
        android:id="@+id/view2"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="174dp"
        android:background="@drawable/bc_view2"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/btnExitGame"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/bc_btn1"
        android:text="退出游戏"
        android:onClick="exitGame"
        android:textColor="#fff"
        android:fontFamily="@font/fandolsong_bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view" />

    <Button
        android:id="@+id/btnTryAgain"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/bc_btn1"
        android:text="再次挑战"
        android:onClick="tryAgain"
        android:textColor="#fff"
        android:fontFamily="@font/fandolsong_bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fandolsong_bold"
        android:letterSpacing="0.15"
        android:text="本局得分:"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fandolsong_bold"
        android:letterSpacing="0.15"
        android:text="当前得分:"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/tv_currentPoint_sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/fandolsong_bold"
        android:letterSpacing="0.1"
        android:text="123"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:id="@+id/tv_totalPoint_sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/fandolsong_bold"
        android:letterSpacing="0.1"
        android:text="123"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />


</androidx.constraintlayout.widget.ConstraintLayout>